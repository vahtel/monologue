<div class="workspace_public">
	
	<div class="container-fluid home">
			<div class="container space30 blog">
		<% content_for :title do %>
		 <title> <%= @revision.title %> </title>
		<% end %>

		<% content_for :meta do %>
		<meta name="description" content="<%= truncate(strip_tags(@revision.content), :length => 155) %>">
		<% end %>

		<article>
		  <header><h1><%= link_to @revision.title, @revision.full_url %></h1></header>
		  <div class="posted">
		    <time datetime="<%= @revision.published_at %>">
		     <%= @revision.user.name %> <%= @revision.published_at.to_date.to_formatted_s(:short) %>
		    </time>
		   <a href="<%= @revision.full_url + "#disqus_thread" %>"></a>
		  </div>
		  <p><%= raw @revision.content %></p>

		  <%= render "social_sharing" %>

		  <div id="disqus_thread"></div>
		  <script type="text/javascript">
			  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
			  var disqus_shortname = '<%= Monologue.disqus_shortname%>'; // required: replace example with your forum shortname

			  <% if Rails.env.development?  %>
			  var disqus_developer = 1; // developer mode is on
			  <% end %>

			  /* * * DON'T EDIT BELOW THIS LINE * * */
			  (function () {
				  var dsq = document.createElement('script');
				  dsq.type = 'text/javascript';
				  dsq.async = true;
				  dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
				  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
			  })();
		  </script>
		  <noscript>Please enable JavaScript to view the comments.</noscript>
		</article>
			</div>
		</div>
	</div>		